<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="982.0" prefWidth="622.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alif.mollahandsons.controller.AddProductViewController">
   <content>
      <VBox alignment="CENTER" prefHeight="943.0" prefWidth="620.0" spacing="20" styleClass="form-container">
         <children>
            <VBox alignment="CENTER" spacing="10">
               <children>
                  <Separator styleClass="title-separator" />
                  <Label contentDisplay="CENTER" prefHeight="26.0" prefWidth="172.0" style="-fx-border-color: darkgreen;" text="Add New Fartilizer Product" wrapText="true">
                     <font>
                        <Font name="Shobhika Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label styleClass="form-subtitle" text="Enter product information below" />
               </children>
            </VBox>
            <VBox maxWidth="600" spacing="15" styleClass="form-content">
               <children>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Select Company *" />
                        <ComboBox fx:id="companyComboBox" promptText="Select a company" styleClass="combo-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Product Name *" />
                        <TextField fx:id="nameTextField" promptText="Enter product name" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Brand *" />
                        <TextField fx:id="brandTextField" promptText="Enter brand name" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Product Type *" />
                        <ComboBox fx:id="typeComboBox" promptText="Select product type" styleClass="combo-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Category *" />
                        <ComboBox fx:id="categoryComboBox" promptText="Select category" styleClass="combo-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Unit Price (৳) *" />
                        <TextField fx:id="unitPriceTextField" promptText="Enter unit price" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Cost Price (৳)" />
                        <TextField fx:id="costPriceTextField" promptText="Enter cost price" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Initial Stock Quantity *" />
                        <TextField fx:id="stockQuantityTextField" promptText="Enter initial stock quantity" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Minimum Stock Level *" />
                        <TextField fx:id="minStockLevelTextField" promptText="Enter minimum stock level" styleClass="input-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Unit *" />
                        <ComboBox fx:id="unitComboBox" promptText="Select unit" styleClass="combo-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="field-label" text="Description" />
                        <TextArea fx:id="descriptionAreaField" prefRowCount="3" promptText="Enter product description" styleClass="textarea-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5" />
                  <HBox alignment="CENTER" spacing="15">
                     <children>
                        <Button onAction="#saveButtonOnAction" style="-fx-border-color: green;" styleClass="primary-button" text="Save Product" />
                        <Button onAction="#clearButtonOnAction" style="-fx-border-color: yellow;" styleClass="secondary-button" text="Clear Form" />
                        <Button onAction="#cancelButtonOnAction" style="-fx-border-color: red;" styleClass="cancel-button" text="Cancel" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
